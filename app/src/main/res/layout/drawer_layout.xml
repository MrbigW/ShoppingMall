<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eee"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include layout="@layout/drawer_layout_title"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#eee"/>

        <ExpandableListView
            android:id="@+id/expandlv_filtrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:childDivider="#eee"
            android:divider="#eee"
            android:dividerHeight="0.5dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_select_filtrate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/new_black_background_btn"
        android:text="重置"
        android:textColor="#303235"
        android:textSize="16sp"/>

</LinearLayout>